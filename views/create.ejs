<%- include parts/top.ejs %> 
    <script>
        $(document).ready(function() {
            $('#pdfslides').hide();

            $('#create').submit(function(e) {
                e.preventDefault();

                function success(data){
                    console.log(arguments);
                    alert(JSON.stringify(data));
                }

                function error(xhr, status, err){
                    alert(JSON.stringify(err));
                }

                $(this).ajaxSubmit( {
                    error: error,
                    success: success
                });
            });

            $('#type').change(function() {
                $('#dzslides').toggle();
                $('#pdfslides').toggle();
            });
        });
    </script>

    <h2>Create</h2>
    <div>
        <form id="create" action="/create" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= token %>" />
            <div>
                <label> Title </label>
                <input id="title" name="title" />
            </div>
            <div>
                <label> Description </label>
                <input id="desc" name="desc" />
            </div>
            <div>
                <label> Type: </label>
                <select id="type" name="type">
                    <option value="dzslides">DzSlides (HTML/CSS)</option>
                    <option value="pdf">PDF (Upload)</option>
                </select>
            <div id="dzslides">
                <div>
                    <label> HTML (dzSlides) </label>
                    <textarea id="html" name="html"> </textarea>
                </div>
                <div>
                    <label> CSS (dzSlides) </label>
                    <textarea id="css" name="css"> </textarea>
                </div>
            </div>
            <div id="pdfslides">
                <label> PDF File </label>
                <input type="file" id="pdffile" name="pdfFile" />
            </div>
            <div>
                <button id="createButton"> Create </button>
            </div>
        </form>
    </div>
<%- include parts/bottom.ejs %> 